.box
    position absolute
    top calc(50% - 80px)
    left calc(50% - 100px)
    transform perspective(1000px) rotateY(-45deg)
    width 200px
    height 400px
    transform-style preserve-3d
    &-
        position absolute
        top 0px
        left 0px
        width 100%
        height 100%
        transform-style preserve-3d
        animation animate1 5s linear infinite
        span 
            position absolute 
            top 0px
            left 0px
            height 100%
            width 100%
            background linear-gradient(0deg , red , #ddd , #ac81dc)
            border-radius 40px
            &:nth-child(1)
                transform rotateX(0deg)
            &:nth-child(2)
                transform rotateX(45deg)
            &:nth-child(3)
                transform rotateX(-45deg)
            &:nth-child(4)
                transform rotateX(90deg)


@keyframes animate1
    0%
        transform perspective(1000px) rotateY(0deg)
    100%
        transform perspective(1000px) rotateX(359deg)    
