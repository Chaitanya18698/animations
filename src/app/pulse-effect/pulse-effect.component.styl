section
    position absolute
    width 100%
    height 100vh
    overflow hidden 
    animation bgColor 20s linear infinite
    .bg-pulse
        width 100% 
        height 100%
        span
            position absolute
            width 80px
            height 80px
            background red
            animation animate3 10s linear infinite
            &:nth-child(2n + 1)
                background transparent
                border 5px solid red
                animation animate3 4s linear infinite
            &:nth-child(1)
                left 50%
                top 20%
                animation animate3 15s linear infinite
            &:nth-child(2)
                left 80%
                top 40%
                animation animate3 6s linear infinite
            &:nth-child(3)
                left 10%
                top 65%
                animation animate3 5s linear infinite
            &:nth-child(4)
                left 50%
                top 70%
                animation animate3 8s linear infinite
            &:nth-child(5)
                left 10%
                top 30%
                animation animate3 10s linear infinite
            &:nth-child(6)
                left 90%
                top 95%
                animation animate3 7s linear infinite
            &:nth-child(7)
                left 80%
                top 5%
                animation animate3 8s linear infinite
            &:nth-child(8)
                left 35%
                top 50%
                animation animate3 14s linear infinite
            &:nth-child(9)
                left 5%
                top 5%
                animation animate3 12s linear infinite
            &:nth-child(10)
                left 25%
                top 90%
                animation animate3 13s linear infinite

@keyframes animate3

    0%   

        transform scale(0) translateY(0) rotate(0deg)
        opacity 0
    100%

        transform scale(1) translateY(100px) rotate(360deg)
        opacity 1
    
@keyframes bgColor
    0%
        background #f44336
    
    25%
        background #03a9f4

    50%
        background #9c27b0

    75%
        background #00ff0a

    100%
        background #f44336

