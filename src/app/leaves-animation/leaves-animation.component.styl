input[type="text"] 
	font 15px/24px "Lato", Arial, sans-serif
	color #333
	width 100%
	box-sizing border-box
	letter-spacing 1px
.col-3 
	float left
	width 27.33%
	margin 40px 3%
	position relative


.effect-11 
	& ~ .focus-bg 
		position absolute
		left 0
		top 0
		width 0
		height 100%
		background-color #4250b5
		transition 0.3s
		z-index -1
	&:focus 
		& ~ .focus-bg 
			transition 0.3s
			width 100%
.chat-box
    &::-webkit-scrollbar-track
      -webkit-box-shadow inset 0 0 1px rgba(0,0,0,0.3)
      background-color #F5F5F5
    &::-webkit-scrollbar
      width 2px
      background-color #F5F5F5
    &::-webkit-scrollbar-thumb
      background-color #4250b5
.circle
    width 50px
    height 50px
    background #4250b5
    position absolute
    border-radius 50%
    right 60px
    bottom -60px
    cursor pointer
    z-index 5
    animation animate 14s linear infinite
    .bot
        font-size 22px
        position absolute
        left 11px
        top 4px
        color white
.active
    opacity 1
    transition-duration 0.5s

@keyframes animate 
    0%
        transform rotate(0deg)
    20%
        transform rotate(360deg)

        

    